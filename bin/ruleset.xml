<?xml version="1.0"?>
<ruleset name="Custom ruleset"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

  <description>Customization of standard rules for metrics collection</description>

  <!-- Print ALL methods and ALL classes, since we are calculating metrics, not violations -->
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength" message="All methods">
    <properties>
        <property name="minimum" value="0" />
    </properties>
  </rule>
  
    <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength" message="All methods">
    <properties>
        <property name="minimum" value="0"/>
    </properties>
  </rule>

</ruleset>